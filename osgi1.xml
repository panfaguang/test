	<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<version>2.4.0</version>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-SymbolicName>${pom.artifactId}</Bundle-SymbolicName>
						<Bundle-Name>${pom.artifactId}</Bundle-Name>
						<Bundle-Vendor>pan.com</Bundle-Vendor>
						<Import-Package>
							javax.servlet;version="[3.0,4)",
							javax.servlet.http;version="[3.0,4)",
							org.apache.commons.logging*,
							javax.ws.rs*,
							*;resolution:=optional
						</Import-Package>
						<Embed-Transitive>true</Embed-Transitive>
						<Embed-Dependency>
							jackson-core-asl,jackson-mapper-asl,jackson-jaxrs,Sdk4J,commons-httpclient,commons-codec
						</Embed-Dependency>
						<Embed-Directory>lib</Embed-Directory>
						<Include-Resource>src/main/resources,src/main/java</Include-Resource>
					</instructions>
				</configuration>
			</plugin>
		</plugins>